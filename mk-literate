.SUFFIXES: .lhs .mkd .html .tex .pdf

PANDOC := ~/.cabal/bin/pandoc --no-wrap -sS
HSCOLOUR := ~/.cabal/bin/HsColour -lit

.lhs.mkd:
	cat $< | $(HSCOLOUR) -css > $@

.lhs.html:
	cat $< | $(HSCOLOUR) -css | $(PANDOC) -t html5 -c hscolour.css > $@

.lhs.tex:
	cat $< | $(HSCOLOUR) -latex | $(PANDOC) -t latex> $@

.tex.pdf:
	pdflatex $< && pdflatex $< && pdflatex $<
